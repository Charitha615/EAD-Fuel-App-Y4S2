<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/StationRawViewOuterLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="0dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:id="@+id/fuelStationRowCard"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/fuelStationRawViewHorizontalLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/fuelStationLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="IOC Filling Station"
            android:textColor="#020202"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/fuelStationCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:cardBackgroundColor="#00D60A"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/fuelStationStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:text="Available"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:cardBackgroundColor="#673AB7"
            app:cardCornerRadius="30dp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>


</LinearLayout>